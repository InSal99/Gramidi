<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherActivity.BookDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivDetailImage"
                android:layout_width="302dp"
                android:layout_height="300dp"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="80dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="32dp"
                android:text="Book Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="20dp" />
            <TextView
                android:id="@+id/tvDetailWriter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Writer"
                android:gravity="center"
                android:layout_marginHorizontal="32dp"
                android:textSize="20sp"
                tools:layout_editor_absoluteX="47dp"
                tools:layout_editor_absoluteY="401dp" />

            <TextView
                android:id="@+id/tvDetailCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="32dp"
                android:textSize="16sp"
                android:gravity="center"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="401dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:orientation="horizontal"
                android:paddingTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Penerbitan:"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/tvDetailPublisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publisher" />

                        <TextView
                            android:id="@+id/tvDetailPublishDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Publish Date" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvDetailIsbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ISBN" />

                    <TextView
                        android:id="@+id/tvDetailHal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Halaman" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="32dp"
                android:text="Descriptionnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="449dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>



